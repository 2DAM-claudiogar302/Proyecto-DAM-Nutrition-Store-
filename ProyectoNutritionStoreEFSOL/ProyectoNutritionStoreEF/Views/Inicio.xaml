<Window x:Class="ProyectoNutritionStoreEF.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoNutritionStoreEF"
        xmlns:control="clr-namespace:ProyectoNutritionStoreEF.UserControls"
        Icon="/Resources/Logo_NutritionStore.png"
        mc:Ignorable="d"
        Title="Inicio" Height="550" Width="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/01-Portada.png"/>
        </Grid.Background>

        <Grid Grid.Row="0">
            <Image Source="/Resources/Logo_NutritionStore.png" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Bottom" 
           Width="170" Height="200" Margin="0,-11,0,0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button Style="{StaticResource bordesBoton2}" Width="180" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Click="Button_Click">Log in</Button>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,10,0,0">
                <Run Text="Don’t have an account? " Foreground="{StaticResource colorSecundario1}"/>
               <Button Style="{StaticResource TransparentButtonStyle}" Command="{Binding SignInCommand}" Click="registro">
                    <TextBlock Foreground="{StaticResource colorSecundario2}" FontStyle="Italic" Text="Sign In" FontSize="12"/>
               </Button>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
