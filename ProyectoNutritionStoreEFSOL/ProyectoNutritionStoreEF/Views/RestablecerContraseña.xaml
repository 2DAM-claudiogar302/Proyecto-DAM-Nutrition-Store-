<Window x:Class="ProyectoNutritionStoreEF.Views.RestablecerContraseña"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoNutritionStoreEF.Views"
          xmlns:control="clr-namespace:ProyectoNutritionStoreEF.UserControls" xmlns:viewmodels="clr-namespace:ProyectoNutritionStoreEF.ViewModels"
    mc:Ignorable="d"
        Icon="/Resources/Logo_NutritionStore.png"
    Title="Reestablecer Contraseña" Height="460" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <control:Header></control:Header>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Introduce tu usuario:" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            <TextBlock Text="Introduce la nueva contraseña:" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            <TextBlock Text="Confirma la nueva contraseña:" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
            <TextBox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="320" Text="{Binding Username}"/>
            <PasswordBox Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="320" PasswordChanged="NuevaContrasena_Changed"/>
            <PasswordBox Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="320" PasswordChanged="ConfirmarContrasena_Changed"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="7" Grid.Column="1" Margin="6">
                <Button x:Name="reestablecer" Content="Confirmar" Margin="0,0,16,0" Style="{StaticResource bordesBoton}" Width="90" Command="{Binding ReestablecerContrasena}"></Button>
                <Button x:Name="cancelar" Content="Cancelar"  Margin="16,0,0,0" Style="{StaticResource bordesBoton}" Width="90" Command="{Binding CancelCommand}"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
