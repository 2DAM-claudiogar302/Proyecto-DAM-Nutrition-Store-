<UserControl x:Class="NutritionStoreEF.UserControls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NutritionStoreEF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="{StaticResource colorCabecera}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <!-- Botón de barra -->
                <Button HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Width="40" Height="40" 
                        Margin="20,0,0,0" 
                        Style="{StaticResource bordesBoton}"
                        Command="{Binding VistaEntrenamiento}"
                        Background="#FEF2F2" 
                        BorderBrush="Transparent">
                    <Image Source="/Resources/GymIcon.png" 
                           Width="30" Height="30"/>
                </Button>

                <!-- Logo principal -->
                <Image Source="/Resources/Logo_NutritionStore.png" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Width="100" Height="100"/>

                <!-- Botón de flecha -->
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Width="40" Height="40" 
                        Margin="0,0,20,0" 
                        Style="{StaticResource bordesBoton}"
                        Background="#FEF2F2" 
                        BorderBrush="Transparent">
                    <Image Source="/Resources/LogOutIcon.png" 
                           Width="30" Height="30"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
