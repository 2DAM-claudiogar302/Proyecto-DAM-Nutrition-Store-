<Window x:Class="NutritionStorePruebaEF.Views.IndexAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NutritionStorePruebaEF.Views"
        xmlns:control="clr-namespace:NutritionStorePruebaEF.UserControls"
        mc:Ignorable="d"
        Title="IndexAdmin" Height="550" Width="400">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <control:Header></control:Header>
            </Grid>
            <Grid Grid.Row="1">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,6,0,7">
                    <Button Content="Añadir" Style="{StaticResource bordesBoton}" Background="{StaticResource colorPrimario2}" Margin="10,0,10,0" FontWeight="Bold" Width="70" FontSize="16" Height="40" Click="Button_Click"></Button>
                    <Button Content="Editar" Style="{StaticResource bordesBoton}" Background="{StaticResource colorPrimario2}" Margin="0,0,10,0" FontWeight="Bold"  Width="70" FontSize="16" Height="40" Click="Button_Click_1"></Button>
                    <Button Content="Eliminar" Style="{StaticResource bordesBoton}" Background="{StaticResource colorPrimario2}" Margin="0,0,10,0" FontWeight="Bold"  Width="74" FontSize="16" Height="40" Click="Button_Click_2"></Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Button Content="Inicio" 
            FontSize="10" 
            FontWeight="Bold" 
            Margin="20,0" 
            Background="Transparent" 
            BorderBrush="Transparent"/>

                    <Button Content="Proteínas" 
            FontSize="10" 
            FontWeight="Normal" 
            Margin="20,0" 
            Background="Transparent" 
            BorderBrush="Transparent"/>

                    <Button Content="Vitaminas" 
            FontSize="10" 
            FontWeight="Normal" 
            Margin="20,0" 
            Background="Transparent" 
            BorderBrush="Transparent"/>

                    <Button Content="Aminoácidos" 
            FontSize="10" 
            FontWeight="Normal" 
            Margin="20,0" 
            Background="Transparent" 
            BorderBrush="Transparent"/>

                    <Button Content="Map" 
            FontSize="10" 
            FontWeight="Normal" 
            Margin="20,0" 
            Background="Transparent" 
            BorderBrush="Transparent" Click="Button_Click_3"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="200" Height="300" Margin="10" Background="LightGray" CornerRadius="10">
                            <StackPanel>
                                <Image Source="/Resources/creatina.png" Width="150" Height="150" HorizontalAlignment="Center"/>
                                <TextBlock Text="Creatina Monohidrato" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Compuesto natural que ayuda a producir energía durante actividades intensas." 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </Border>

                        <Border Width="200" Height="300" Margin="10" Background="LightGray" CornerRadius="10">
                            <StackPanel>
                                <Image Source="/Resources/proteina.png" Width="150" Height="150" HorizontalAlignment="Center"/>
                                <TextBlock Text="Proteína Whey" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Rico suplemento en proteínas de alta calidad, ideal para nutrición deportiva." 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </Border>

                        <Border Width="200" Height="300" Margin="10" Background="LightGray" CornerRadius="10">
                            <StackPanel>
                                <Image Source="/Resources/omega3.png" Width="150" Height="150" HorizontalAlignment="Center"/>
                                <TextBlock Text="Omega 3" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Propiedades antiinflamatorias y beneficios para la salud del corazón y cerebro." 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </Border>

                        <!-- Cuarto ítem -->
                        <Border Width="200" Height="300" Margin="10" Background="LightGray" CornerRadius="10">
                            <StackPanel>
                                <Image Source="/Resources/aminoacidos.png" Width="150" Height="150" HorizontalAlignment="Center"/>
                                <TextBlock Text="Aminoácidos Esenciales" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Text="Clave para síntesis de proteínas y funciones metabólicas." 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock Text="Muchas gracias por su visita." HorizontalAlignment="Center" Margin="0,15,0,0" FontWeight="Bold"></TextBlock>
            </Grid>


        </Grid>
    </Grid>
</Window>
